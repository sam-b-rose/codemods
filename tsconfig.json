{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["**/*.ts"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["jest", "node"]
  }
}
